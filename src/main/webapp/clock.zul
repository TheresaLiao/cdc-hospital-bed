<zk xmlns:n="native" xmlns="http://www.zkoss.org/2005/zul">
	<hbox align="center" pack="center" sclass="box col-12">
		<label id="clock" sclass="time text-white h2 " width="100%" />
		<timer id="timer" delay="1000" repeats="true">
			<attribute name="onTimer">
				clock.setValue(new Date().toString());
			</attribute>
		</timer>
	</hbox>
</zk>